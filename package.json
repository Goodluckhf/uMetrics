{
  "name": "umetrics",
  "version": "1.0.0",
  "description": "Convenient wrapper for prom-client to expose product's metrics to prometheus",
  "main": "index.js",
  "scripts": {
    "test": "mocha --exit --ui bdd --reporter spec --require babel-register ./**/*.server.test.js ./*.server.test.js",
    "test:coverage:dev": "nyc --reporter=text --require babel-register mocha --exit --ui bdd --reporter spec --require babel-register ./**/*.server.test.js ./*.server.test.js",
    "test:coverage": "nyc --reporter=lcov --require babel-register mocha --exit --ui bdd --reporter spec --require babel-register ./**/*.server.test.js ./*.server.test.js",
    "report-coverage": "cat coverage/lcov.info | coveralls",
    "eslint": "npx eslint --quiet .",
    "prebuild": "rimraf ./dist",
    "build": "babel ./ -d ./dist -s --ignore *.server.test.js,node_modules",
    "precommit": "lint-staged",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Goodluckhf/uMetrics.git"
  },
  "keywords": [
    "prometheus",
    "metrics",
    "javascript",
    "prom-client"
  ],
  "author": "Goodluckhf <Goodluckhf@yandex.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Goodluckhf/uMetrics/issues"
  },
  "homepage": "https://github.com/Goodluckhf/uMetrics#readme",
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.12.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.3",
    "mocha-lcov-reporter": "^1.3.0",
    "semantic-release": "^15.5.4"
  },
  "dependencies": {
    "prom-client": "11.1.3"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint-config-airbnb-base"
    ],
    "parser": "babel-eslint",
    "rules": {
      "no-multi-spaces": 0,
      "indent": [
        "error",
        "tab"
      ],
      "no-tabs": 0,
      "key-spacing": [
        "error",
        {
          "align": {
            "beforeColon": false,
            "afterColon": true,
            "on": "colon"
          }
        }
      ],
      "no-unused-expressions": 0,
      "no-param-reassign": 0,
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true
        }
      ],
      "spaced-comment": 0,
      "no-trailing-spaces": 0,
      "arrow-body-style": [
        1,
        "as-needed"
      ],
      "flowtype/space-before-type-colon": 0,
      "flowtype/space-after-type-colon": 0
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          },
          "useBuiltIns": "usage",
          "loose": true
        }
      ]
    ],
    "plugins": [
      [
        "transform-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ]
    ]
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "docs",
          "release": "patch"
        },
        {
          "type": "refactor",
          "release": "patch"
        }
      ]
    }
  },
  "files": [
    "dist/**/*.*"
  ]
}
