{
  "name": "umetrics",
  "version": "1.0.0",
  "description": "Convenient wrapper for prom-client to expose product's metrics to prometheus",
  "main": "dist/index.js",
  "scripts": {
    "test": "mocha --exit --ui bdd --reporter spec --require @babel/register ./src/**/*.server.test.js ./src/*.server.test.js",
    "test:coverage:dev": "nyc --reporter=text --require @babel/register mocha --exit --ui bdd --reporter spec --require @babel/register ./src/**/*.server.test.js ./src/*.server.test.js",
    "test:coverage": "nyc --reporter=lcov --require @babel/register mocha --exit --ui bdd --reporter spec --require @babel/register ./src/**/*.server.test.js ./src/*.server.test.js",
    "report-coverage": "cat coverage/lcov.info | coveralls",
    "lint": "eslint --ignore-path .gitignore \"**/*.js\"",
    "lint:fix": "npm run lint -- --fix",
    "prebuild": "rimraf ./dist",
    "build": "babel src -d ./dist -s --ignore *.server.test.js",
    "precommit": "lint-staged",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Goodluckhf/uMetrics.git"
  },
  "keywords": [
    "prometheus",
    "metrics",
    "javascript",
    "prom-client"
  ],
  "author": "Goodluckhf <Goodluckhf@yandex.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Goodluckhf/uMetrics/issues"
  },
  "engines": {
    "node": ">=6.10.0"
  },
  "homepage": "https://github.com/Goodluckhf/uMetrics#readme",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.2",
    "chai": "^4.2.0",
    "coveralls": "^3.0.1",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.12.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.1.0",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^14.1.1",
    "semantic-release": "^15.5.4"
  },
  "dependencies": {
    "prom-client": "11.5.3"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "eslint-config-airbnb-base"
    ],
    "parser": "babel-eslint",
    "rules": {
      "no-multi-spaces": 0,
      "indent": [
        "error",
        "tab"
      ],
      "no-tabs": 0,
      "implicit-arrow-linebreak": "warn",
      "key-spacing": [
        "error",
        {
          "align": {
            "beforeColon": false,
            "afterColon": true,
            "on": "colon"
          }
        }
      ],
      "no-unused-expressions": 0,
      "no-param-reassign": 0,
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true
        }
      ],
      "spaced-comment": 0,
      "no-trailing-spaces": 0,
      "arrow-body-style": [
        1,
        "as-needed"
      ],
      "flowtype/space-before-type-colon": 0,
      "flowtype/space-after-type-colon": 0
    },
    "overrides": [
      {
        "files": [
          "*.server.test.js"
        ],
        "globals": {
          "describe": false,
          "it": false,
          "beforeEach": false,
          "afterEach": false
        },
        "rules": {
          "no-underscore-dangle": "off",
          "no-new": "off"
        }
      }
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          },
          "loose": true
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-object-rest-spread",
        {
          "useBuiltIns": true
        }
      ]
    ]
  },
  "release": {
    "analyzeCommits": {
      "preset": "angular",
      "releaseRules": [
        {
          "type": "docs",
          "release": "patch"
        },
        {
          "type": "refactor",
          "release": "patch"
        },
        {
          "type": "chore",
          "release": "patch"
        },
        {
          "type": "style",
          "release": "patch"
        }
      ]
    }
  },
  "pkgRoot": "dist",
  "files": [
    "dist/**/*.*",
    "!dist/**/*.test.*"
  ]
}
